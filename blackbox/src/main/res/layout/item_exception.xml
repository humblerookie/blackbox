<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/keyline_1"
    android:background="@drawable/border_grey"
    android:orientation="vertical"
    android:padding="@dimen/keyline_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            style="?textAppearanceCaption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/keyline_1"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            tools:text="NullPointerException" />

        <TextView
            android:id="@+id/time"
            style="?textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            tools:text="12-1-2020 8:15pm" />
    </LinearLayout>


    <TextView
        android:id="@+id/trace"
        style="?textAppearanceBody2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        tools:text="Something shitty Happened" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_1"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent_BlackBox"
            android:paddingHorizontal="@dimen/keyline_1"
            android:text="@string/bb_copy"
            android:textColor="@color/colorPrimary_BlackBox" />

        <Button
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_1"
            android:backgroundTint="@color/colorAccent_BlackBox"
            android:text="@string/bb_share"
            android:textColor="@color/colorPrimary_BlackBox" />

    </LinearLayout>

</LinearLayout>